{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowJs": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "mock/*": ["mock/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "mock/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
